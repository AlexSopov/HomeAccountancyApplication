<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/transaction_list_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="transaction_icon"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >

            <TextView android:id="@+id/transaction_list_item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/main_text_color"
                android:gravity="top"
                android:textSize="@dimen/important_text_size"
                android:textStyle="normal|bold" />

            <TextView android:id="@+id/transaction_list_item_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_color"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/description_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:id="@+id/transaction_list_item_amount"
                android:layout_marginBottom="5dp"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="@dimen/important_text_size"
                android:textStyle="normal|bold" />

            <TextView android:id="@+id/transaction_list_item_date"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/description_text_size"
                android:textStyle="normal|italic" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/transaction_list_item_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/main_text_color"
        android:textStyle="normal|italic" />

</LinearLayout>
