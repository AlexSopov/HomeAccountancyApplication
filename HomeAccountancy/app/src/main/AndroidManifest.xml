<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.homeaccountancy">

    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:icon="@drawable/logo">

        <!--Main activity-->
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Data activities-->
        <activity
            android:name=".Activity.CategoriesActivity"
            android:label="Категории"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.homeaccountancy.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.AccountsActivity"
            android:label="Счета"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.homeaccountancy.Activity.MainActivity" />
        </activity>

        <!--Single data activities-->
        <activity
            android:name=".Activity.SingleTransactionActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"
            android:label="Платеж"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Activity.SingleAccountActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"
            android:label="Счёт"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Activity.SingleCategoryActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"
            android:label="Категория"
            android:screenOrientation="portrait">
        </activity>

        <!-- Chart activities-->
        <activity
            android:name=".Activity.PieCharActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Круговая диаграмма"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.homeaccountancy.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.BarChartActivity"
            android:label="Столбчатая диаграмма"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.homeaccountancy.Activity.MainActivity" />
        </activity>
    </application>

</manifest>