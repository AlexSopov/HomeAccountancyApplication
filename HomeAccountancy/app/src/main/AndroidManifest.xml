<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.homeaccountancy">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Main activity-->
        <activity
            android:name=".Activity.MainActivity"
            android:label="Журнал"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Data activities-->
        <activity
            android:name=".Activity.CategoriesActivity"
            android:label="Категории"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.homeaccountancy.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.AccountsActivity"
            android:label="Счета"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.homeaccountancy.Activity.MainActivity" />
        </activity>

        <!--Single data activities-->
        <activity
            android:name=".Activity.SingleTransactionActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"
            android:label="Платеж">
        </activity>
        <activity
            android:name=".Activity.SingleAccountActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"
            android:label="Счёт">
        </activity>
        <activity
            android:name=".Activity.SingleCategoryActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"
            android:label="Категория">
        </activity>

        <!-- Chart activities-->
        <activity
            android:name=".Activity.PieCharActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Круговая диаграмма">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.homeaccountancy.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.BarChartActivity"
            android:label="Столбчатая диаграмма"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.homeaccountancy.Activity.MainActivity" />
        </activity>
    </application>

</manifest>
    <!--android:parentActivityName=".activity.MainActivity"-->