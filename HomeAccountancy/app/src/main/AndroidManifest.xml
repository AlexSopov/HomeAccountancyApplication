<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.homeaccountancy">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Main activity-->
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main_activity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Data activities-->
        <activity
            android:name=".activity.CategoriesActivity"
            android:label="Категории"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.homeaccountancy.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.AccountsActivity"
            android:label="Счета"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.homeaccountancy.activity.MainActivity" />
        </activity>

        <!--Single data activities-->
        <activity
            android:name=".activity.SingleTransactionActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Транзакция">
        </activity>
        <activity
            android:name=".activity.SingleAccountActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Счёт">
        </activity>
        <activity
            android:name=".activity.SingleCategoryActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Категория">
        </activity>

        <!-- Chart activities-->
        <activity
            android:name=".activity.PieCharActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Круговая диаграмма">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.homeaccountancy.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.BarChartActivity"
            android:label="Столбчатая диаграмма"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.homeaccountancy.activity.MainActivity" />
        </activity>

        <activity
            android:name=".activity.FilterActivity"
            android:label="@string/title_activity_filter"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
